<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:local="using:VibePanel"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="VibePanel.MainView">
	<local:VibePanel>
		<Ellipse Width="20" Height="20" Fill="White" x:Name="MainEllipse"/>
		<StackPanel Orientation="Vertical">
			<StackPanel Orientation="Horizontal" MinWidth="250" Margin="250,0,0,0">
				<TextBlock Text="X: "/>
				<TextBlock x:Name="XTextBlock"/>
			</StackPanel>
			<StackPanel Orientation="Horizontal" MinWidth="250" Margin="250,0,0,0">
				<TextBlock Text="Y: "/>
				<TextBlock x:Name="YTextBlock"/>
			</StackPanel>
		</StackPanel>
	</local:VibePanel>
</UserControl>
